ServerRoot "<%= ENV['OPENSHIFT_ROCKMONGO_DIR'] %>"
DocumentRoot "<%= ENV['OPENSHIFT_REPO_DIR'] %>"
Listen <%= ENV['OPENSHIFT_ROCKMONGO_IP'] %>:<%= ENV['OPENSHIFT_ROCKMONGO_PORT'] %>
User <%= ENV['OPENSHIFT_GEAR_UUID'] %>
Group <%= ENV['OPENSHIFT_GEAR_UUID'] %>

ErrorLog "|/usr/sbin/rotatelogs <%= ENV['OPENSHIFT_ROCKMONGO_DIR'] %>logs/error_log-%Y%m%d-%H%M%S-%Z 86400"
CustomLog "|/usr/sbin/rotatelogs <%= ENV['OPENSHIFT_ROCKMONGO_DIR'] %>logs/access_log-%Y%m%d-%H%M%S-%Z 86400" combined

php_value include_path "."
